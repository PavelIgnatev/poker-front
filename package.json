{
  "name": "poker-front",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "tsc && react-scripts start",
    "build": "tsc && react-scripts build",
    "eject": "react-scripts eject",
    "format": "prettier --config .prettierrc --write 'src/**/*.{ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },

  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
